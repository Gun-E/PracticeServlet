<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>url</param-name>
        <param-value>https://nhnacademy.com/</param-value>
    </context-param>

    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>com.nhnacademy.hello.filter.enc.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>lgoinCheckFilter</filter-name>
        <filter-class>com.nhnacademy.hello.filter.enc.LoginCheckFilter</filter-class>
        <init-param>
            <param-name>exclude-urls</param-name>
            <param-value>
                /login
                /logout
                /login.html
            </param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>lgoinCheckFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.nhnacademy.hello.listener.ServletContextListener</listener-class>
    </listener>
    <filter>
        <filter-name>counterFilter</filter-name>
        <filter-class>com.nhnacademy.hello.filter.enc.CounterFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>counterFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.nhnacademy.hello.listener.SessionListener</listener-class>
    </listener>
</web-app>